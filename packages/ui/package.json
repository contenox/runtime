{
  "name": "@cate/ui",
  "version": "0.1.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react,react-dom,clsx,tailwind-merge,lucide-react,tailwindcss --tsconfig tsconfig.json",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "peerDependencies": {
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.3",
    "@types/react": "^19.0.10",
    "clsx": "^2.1.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lucide-react": "^0.479.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.12",
    "tsc": "^2.0.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./tailwind-config": {
      "types": "./tailwind.config.d.ts",
      "import": "./tailwind.config.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "postcss": "^8.5.3"
  }
}
